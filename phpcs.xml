<?xml version="1.0"?>
<ruleset name="Custom_PSR12">
  <description>Custom ruleset Based on PSR12</description>
  <rule ref="PSR12" />

  <arg name="extensions" value="php" />
  <arg name="colors" />
  <arg value="sp" />

  <file>./src/</file>

  <exclude-pattern>./tests/*</exclude-pattern>
  <exclude-pattern>./vendor/*</exclude-pattern>
</ruleset>
